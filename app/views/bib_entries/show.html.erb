<%= content_tag(:h3, "Info su oid #{@bib_entry.source_oid}") %>

<ol>
<% @bib_entry.localizzazioni(:all).each do |l| %>
  <%=
    bib = l[:biblioteche].size==0 ? '' : " (#{l[:biblioteche].join(', ')})"
    jsonlink=link_to('[JSON]', getinfo_path(:format=>:json,:href=>l[:href]))
    xmllink=link_to('[XML]', getinfo_path(:format=>:xml,:href=>l[:href]))
    content_tag(:li, link_to(l[:label], l[:href]) + bib + " - " + jsonlink + " - " + xmllink)
  %>
<% end %>
</ol>

